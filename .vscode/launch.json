    "version": "0.2.0",
    "configurations": [
        {
            "args": [
                "--reporter=jasmine-console-reporter",
                "--config=jasmine.json"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Jasmine Tests",
            "program": "node_modules/jasmine/bin/jasmine.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd": "${workspaceFolder}"
        }
    ]
}